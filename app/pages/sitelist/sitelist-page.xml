<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
  <DockLayout>
        <Button text="&#xf055;" tap="{{ OnAddSite }}" class="font-awesome" dock="bottom" />
        <ListView items="{{ Sites }}" itemTap="{{ OnSelectSite }} ">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label text="{{ Name }}"/>
                    <Label text="{{ Url }}"/>                
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>        
  </DockLayout>
</Page>